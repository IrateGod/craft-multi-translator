{% if currentUser.can('deeplTranslateContent') %}
    <fieldset>
        <div class="heading">
            <label class="h6">
                DeepL Translator
            </label>
        </div>
        <div class="meta">
            <div class="field">
                Translate this (and replace content) from
            </div>
            {% for site in craft.app.sites.allSites %}
                {% if element.siteId != site.id %}
                    <div class="field">
                        <a class="btn"
                           href="{{ actionUrl('deepl-translator/sidebar/translate', {
                               'elementId': element.id,
                               'sourceSiteId': site.id,
                               'targetSiteId': element.siteId
                           }) }}">
                            {{ site.name }} ({{ site.locale }})
                        </a>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </fieldset>
{% endif %}
